#!/bin/bash
#
#  galleoncoind The GalleonCoin core server.
#
#
# chkconfig: 345 80 20
# description: galleoncoind
# processname: galleoncoind
#

# Source function library.
. /etc/init.d/functions

# you can override defaults in /etc/sysconfig/galleoncoind, see below
if [ -f /etc/sysconfig/galleoncoind ]; then
        . /etc/sysconfig/galleoncoind
fi

RETVAL=0

prog=galleoncoind
# you can override the lockfile via BITCOIND_LOCKFILE in /etc/sysconfig/galleoncoind
lockfile=${BITCOIND_LOCKFILE-/var/lock/subsys/galleoncoind}

# galleoncoind defaults to /usr/bin/galleoncoind, override with BITCOIND_BIN
bitcoind=${BITCOIND_BIN-/usr/bin/galleoncoind}

# galleoncoind opts default to -disablewallet, override with BITCOIND_OPTS
bitcoind_opts=${BITCOIND_OPTS}

start() {
    echo -n $"Starting $prog: "
    daemon $DAEMONOPTS $bitcoind $bitcoind_opts
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && touch $lockfile
    return $RETVAL
}

stop() {
    echo -n $"Stopping $prog: "
    killproc $prog
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && rm -f $lockfile
    return $RETVAL
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status $prog
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: service $prog {start|stop|status|restart}"
        exit 1
        ;;
esac
